<tr>
    <th scope="row" data-bs-toggle="modal" data-bs-target="#orderModal" @onclick="OnOrderClick">
        Заказ №@Order.Id
    </th>
    <td>@Order.Status</td>
    <td>@Order.DeliveryDate</td>
    <td>@Order.PickupPoint</td>
    <td>@Order.GetCode</td>
</tr>

@code
{
    [Parameter]
    public OrderShortDto Order { get; set; } = default!;

    [Parameter]
    public Func<int, Task> OnOrderClickCallback { get; set; } = default!;


    private Task OnOrderClick() => OnOrderClickCallback(Order.Id);
}
