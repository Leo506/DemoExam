@using DemoExam.Blazor.Shared.Dto.Responses
<tr>
    <th scope="row" data-bs-toggle="modal" data-bs-target="#orderModal">
        @Product.ArticleNumber
    </th>
    <td>@Product.Name</td>
    <td>@Product.Category</td>
    <td>@Product.Price</td>
    <td>@Product.Discount</td>
    <td>@Product.ManufacturerName</td>
    <td>@Product.SupplierName</td>
    <td>@Product.QuantityInStock</td>
    <td>
        <div class="d-flex">
            <button class="btn">
                <i class="oi oi-pencil"></i>
            </button>
            <button class="text-danger btn" @onclick="async () => await OnDeleteClickCallback(Product.ArticleNumber)">
                <i class="oi oi-trash"/>
            </button>
        </div>
    </td>
</tr>

@code {

    [Parameter]
    public Product Product { get; set; } = default!;

    [Parameter]
    public Func<string, Task> OnDeleteClickCallback { get; set; } = default!;
}